<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000000">
  <VideoView
    android:id="@+id/adivery_video_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true" />

  <com.adivery.sdk.networks.adivery.VideoProgress
    android:id="@+id/adivery_video_progress"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:layout_alignParentBottom="true" />

  <ImageView
    android:id="@+id/adivery_close_button"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:scaleType="center"
    android:src="@drawable/adivery_ic_close"
    android:visibility="gone"
    tools:ignore="ContentDescription" />

  <ImageView
    android:id="@+id/adivery_logo"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:scaleType="center"
    android:src="@drawable/adivery_ic_logo"
    tools:ignore="ContentDescription" />

  <LinearLayout
    android:id="@+id/adivery_video_action"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="32dp"
    android:background="@drawable/adivery_video_action_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4dp">
    <TextView
      android:id="@+id/adivery_video_action_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:background="@drawable/adivery_video_action_button_background"
      android:gravity="center"
      android:maxLines="1"
      android:minWidth="72dp"
      android:paddingHorizontal="16dp"
      android:paddingVertical="8dp"
      android:textColor="#ffffff"
      android:textSize="14sp"
      tools:text="نصب رایگان" />
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:layout_weight="1"
      android:gravity="right"
      android:orientation="vertical">
      <TextView
        android:id="@+id/adivery_video_action_advertiser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="14sp"
        tools:text="تاج و تخت" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
          android:id="@+id/adivery_video_action_subtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1"
          android:textColor="#cacaca"
          android:textSize="12sp"
          tools:text="+۵٬۰۰۰٬۰۰۰" />
        <ImageView
          android:id="@+id/adivery_video_action_subtitle_icon"
          android:layout_width="10sp"
          android:layout_height="10sp"
          android:layout_marginLeft="8sp"
          android:layout_marginTop="4sp"
          android:scaleType="fitCenter"
          android:tint="#cacaca"
          tools:src="@drawable/adivery_ic_person" />
      </LinearLayout>

    </LinearLayout>
    <ImageView
      android:id="@+id/adivery_video_action_icon"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_margin="4dp"
      tools:src="#fafafa" />
  </LinearLayout>
</RelativeLayout>